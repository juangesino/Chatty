source 'https://rubygems.org'

gem 'rails', '4.2.6'

# DB
gem 'sqlite3', group: :development
gem 'pg', group: :production

# Assets
gem 'jquery-rails'
gem 'turbolinks'
gem 'bower' 

# Templating and front
gem 'coffee-rails', '~> 4.1.0'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'devise-bootstrap-views'

# Webscokets
gem 'websocket-rails'

# Authentication
gem 'devise'

# React
gem 'react-rails', '~> 1.6.0'
gem 'react-rails-hot-loader'

# Controller and views stuff
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
gem 'draper', '~> 1.3'

# Deployment
gem 'puma'
gem 'rails_12factor', group: :production

group :development do
  # Errors
  gem 'better_errors'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'quiet_assets'
  gem 'binding_of_caller'
  gem 'meta_request'
end
