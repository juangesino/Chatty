
<div class="container vertical-center">
  <div class="row">
    <div class="col-md-12">
      <%= react_component('Chat', user_id: current_user.id, url: '/ajax/messages', title: 'ChattyGeneral') %>
    </div>
  </div>
</div>

<script type="text/javascript">
  // document.addEventListener('DOMContentLoaded', function () {   if (Notification.permission !== "granted")     Notification.requestPermission();   } );
  var globalVar;
  var dispatcher = new WebSocketRails('<%= root_url.gsub("http://", '') %>websocket');
  channel = dispatcher.subscribe('messages');
  channel.bind('new_message', function (data) {
    globalVar(data);
  });
</script>
